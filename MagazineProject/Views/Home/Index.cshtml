<div class="">
    <section>
        <h2>News of the week</h2>
        
        @foreach(var news in Model.allNews)
        {
            <div class="news-section">
                <img src="@Url.Content("~/images/" + news.Image)" class="w-100 h-50" />
                <div class="">
                    <b class="flex-grow-1 fs-4">@news.Title</b>
                    <div class="">
                        <p>@news.Description</p>
                        <p class="text-secondary"> Date - @news.Date</p>
                    </div>
                </div>
            </div>
        }
        
    </section>

    <section class="another-section">
        <div class="latest-news">
            <h2 class="new-header pt-2">New Articles</h2>
            <hr class="article-hr" />
