            @foreach(var articles in Model.allArticles)
            {
                <div class="new-news">
                    <b>@articles.Title</b>
                    <p>@articles.Description</p>
                    <p>@articles.Genre</p>
                    
                </div>
                <hr class="article-hr" />
            }
        </div>

    </section>
</div>


<section class="row">
    <h2>Journals</h2>
    @foreach(var journal in Model.allJournals)
    {
    <div class="articles  col-lg-4 col-sm-12 d-flex align-items-center">
            <img src="@Url.Content("~/images/" + journal.Image)" class="h-50 w-25" />
            <div class="article-details">
                @*<p class="numbers">01</p>*@
                <h3>@journal.Title</h3>
                <p>@journal.Description</p>
            </div>
        </div>
    }
    
</section>

<section>
    <h2 class="mb-4">Advertisement</h2>
    
    @foreach(var advertisement in Model.allAdvertisement)
    {
        <div class="advertisement mb-3">
            <img class="img-fluid" src="@Url.Content("~/images/" + advertisement.Image)" />
            <div class="advertisement-detail">
                <h4>@advertisement.Title</h4>
                <p>@advertisement.Description</p>
            </div>
        </div>
    }
    
</section>
