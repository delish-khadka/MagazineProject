@model MagazineProject.Models.ViewModels.AdvertisementViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="col-md-10 mx-auto py-4">
    <div class="card">
        <div class="card-header bg-primary text-uppercase text-white">
            <h4>Edit </h4>
        </div>
        <div class="article-card mt-1">
            <div class="container-card p-2">
                <form enctype="multipart/form-data" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    

                    <div class="article-header d-flex justify-content-between mt-2">
                        <input placeholder="Enter title" class="title fw-bold fs-2 w-100" asp-for="Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="description mt-4">
                        <input class="description w-100" placeholder="Enter description" asp-for="Description" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="description mt-4">
                        <label asp-for="AdvertisementPostedDate" class="control-label"></label>
                        <input asp-for="AdvertisementPostedDate" class="form-control" />
                        <span asp-validation-for="AdvertisementPostedDate" class="text-danger"></span>
                    </div>
                    <div class="genre mt-4">
                        <input asp-for="AdvertisementImage" type="file" class="custom-file-input" id="customFile">
                        <label class="custom-file-label" for="customFile">Choose file</label>
                    </div>
                    <input type="submit" value="Save" class="btn btn-primary mt-2" />
                    <a asp-action="Index" class="btn btn-primary rounded-0 text-uppercase"><i class="fas fa-fast-backward"></i> Back to List</a>
                </form>
            </div>
        </div>
        
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}  