@model MagazineProject.Models.Article

@{
    ViewData["Title"] = "News Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details</h1>

<div class="article-card mt-1">

    <div class="container-card p-2">
        <div class="article-header d-flex justify-content-between">
            <div class="title fw-bold fs-2">@Html.DisplayFor(model => model.Id)</div>

        </div>

        <div class="article-header d-flex justify-content-between">
            <div class="title fw-bold fs-2">@Html.DisplayFor(model => model.Title)</div>
            
        </div>

        <div class="description">
            <p class="description">@Html.DisplayFor(model => model.Description)</p>
        </div>
        <div class="genre">
            <p class="text-genre">@Html.DisplayFor(model => model.Genre)</p>
        </div>
    </div>

</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a> 
    <a asp-action="Index" class="btn btn-outline-danger">Back to List</a>
</div>
