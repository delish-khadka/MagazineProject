@model List<MagazineProject.Models.Article>

@{
    ViewData["Title"] = "News Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Articles</h3>
<hr />
<div class="d-flex justify-content-between">

    <p>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Create New </a>
    </p>
    

</div>

@if(Model.Count() > 0)
{
    @foreach (var item in Model)
    {
        <div class="article-card mt-1">

            <div class="container-card p-2">
                <div class="article-header d-flex justify-content-between mb-4">
                    <div class="title fw-bold fs-2" style="font-weight: bold; font-size: 20px;">@Html.DisplayFor(modelItem => item.Title)</div>
                    <div class="buttons">
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        @*<a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>*@
                    </div>
                </div>

                <div class="description ">
                    <p class="try" style="text-align: justify;">@Html.DisplayFor(modelItem => item.Description)</p>
                </div>
                <div class="genre">
                    <p class="text-genre">@Html.DisplayFor(modelItem => item.Genre)</p>
                </div>
            </div>

        </div>
    }
}
else{
    <p>No entries found</p>
}



